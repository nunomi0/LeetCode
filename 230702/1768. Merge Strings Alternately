class Solution {
public:
    string mergeAlternately(string word1, string word2) {
        string s="";
        for (int i = 0; i<max(word1.length(),word2.length()); i++){
            if (word1.length()>i) s+=word1[i];
            if (word2.length()>i) s+=word2[i];
        }
        return s;
    }
};
